@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<div class="container mt-5">
    <h2>Are you sure you want to delete this car?</h2>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>
        <dt class="col-sm-2">Price Per Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
