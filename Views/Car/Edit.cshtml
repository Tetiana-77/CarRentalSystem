@model CarRentalSystem.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<div class="container mt-5">
    <h2>Edit Car</h2>
    <form asp-action="Edit" method="post">
        <div class="form-group">
            <label>Brand</label>
            <input type="text" asp-for="Brand" class="form-control" />
        </div>
        <div class="form-group">
            <label>Model</label>
            <input type="text" asp-for="Model" class="form-control" />
        </div>
        <div class="form-group">
            <label>Seating Capacity</label>
            <input type="number" asp-for="SeatingCapacity" class="form-control" />
        </div>
        <div class="form-group">
            <label>Engine</label>
            <input type="text" asp-for="Engine" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fuel Type</label>
            <input type="text" asp-for="FuelType" class="form-control" />
        </div>
        <div class="form-group">
            <label>Passing Year</label>
            <input type="number" asp-for="PassingYear" class="form-control" />
        </div>
        <div class="form-group">
            <label>Car Number</label>
            <input type="text" asp-for="CarNumber" class="form-control" />
        </div>
        <div class="form-group">
            <label>Price Per Day</label>
            <input type="number" asp-for="PricePerDay" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
    </form>
</div>
