@model IEnumerable<CarRentalSystem.Models.Driver>

@{
    ViewData["Title"] = "Список водіїв";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between mb-3 p-3">
                    <h3 class="text-info">Driver List</h3>
                    @Html.ActionLink("Add New Driver", "Create", "Driver", null, new { @class = "btn btn-sm btn-primary" })
                </div>
                <div class="p-3">
                    <table class="table table-responsive table-bordered text-info text-center">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Full Name</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Age</th>
                                <th>Experience</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var driver in Model)
                            {
                                <tr>
                                    <td>@driver.Id</td>
                                    <td>@driver.Name</td>
                                    <td>@driver.Address</td>
                                    <td>@driver.MobileNo</td>
                                    <td>@driver.Age</td>
                                    <td>@driver.Experience</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(driver.ImagePath))
                                        {
                                            <img src="@Url.Content("~/" + driver.ImagePath)" alt="Driver Image" style="width: 50px; height: 50px; border-radius: 50%;" />
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Driver", new { id = driver.Id })" class="btn btn-warning btn-sm">Edit</a>
                                        <a href="@Url.Action("Delete", "Driver", new { id = driver.Id })" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
